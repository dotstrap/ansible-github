#####=== General ===#####

[apply]
  # Detect whitespace errors when applying a patch
  whitespace = fix

[core]
  # Use custom `.gitignore` and `.gitattributes`

  # Treat spaces before tabs and all kinds of trailing whitespace as an error
  # [default] trailing-space: looks for spaces at the end of a line
  # [default] space-before-tab: looks for spaces before tabs at the beginning of a line
  whitespace = space-before-tab,-indent-with-non-tab,trailing-space

  # Make `git rebase` safer on OS X
  # More info: 
  trustctime = false

  # Prevent showing files whose names contain non-ASCII symbols as unversioned.
  # http://michael-kuehnel.de/git/2014/11/21/git-mac-osx-and-german-umlaute.html
  precomposeunicode = false
  editor = vim
	autocrlf = input

[diff]
  # Detect copies as well as renames
  renames = copies

[help]
  # Automatically correct and execute mistyped commands
  autocorrect = 1

[merge]
  # Include summaries of merged commits in newly created merge commit messages
  log = true

[push]
  default = matching

#####=== UI ===#####

[color]
  # Use colors in Git commands that are capable of colored output when
  # outputting to the terminal. (This is the default setting in Git â‰¥ 1.8.4.)
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold # line info
  old = red # deletions
  new = green # additions

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

#####=== URL shorthands ===#####

[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"

[url "git://github.com/"]
  insteadOf = "github:"

[url "git@gist.github.com:"]
  insteadOf = "gst:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"

[url "git://gist.github.com/"]
  insteadOf = "gist:"

#####=== Credentials ===#####

; [github]
;   user = mkwmms

[user]
  name  = mkwmms
  email = mkwmms@users.noreply.github.com 

; [include]
;   path = credentials # include credentials file whose path is relative to this (config) file

[credential]
{% if ansible_distribution == 'MacOSX' %}
  helper = osxkeychain
{% endif %}

#####=== External ===#####

[alias]
  add-upstream = !zsh -ic add-upstream
  sync = !zsh -ic git-sync

[ghi]
  token = !security find-internet-password -a mkwmms -s github.com -l 'ghi token' -w
